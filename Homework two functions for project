function turnOnVideo(){
  console.log("Video starts");
}

// calling the function
turnOnVideo();




function sessionIsDone() {
console.log('Thank you for watching');
}
sessionIsDone();




function displayDone() {
console.log('Thank you for watching');
}

// timer value is in milliseconds
setTimeout(displayDone, 15000);

displayDone();





function helloNewUser(gretting, name='User'){
  console.log(`${gretting}, ${name}`)
}

helloNewUser('welcome to our site');
helloNewUser('welcome to our site', 'Lisa');
